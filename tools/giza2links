use strict;

#---------------------------------------------------------------------------

while (<>){

    $_=<>;                 # target sentence (without links)
    chomp;
    my @trg=split(/ /);
    $_=<>;                 # source sentence (with links)
    chomp;

    my %align=();

    while (/(\S.*?)\s\(\{\s(.*?)\}\)/g){
	printf "%25s\t",$1;
	my @links=split(/\s/,$2);
	if (not @links){print ' NULL';}
	foreach (@links){print ' ',$trg[$_-1];}
	print "\n";
    }
}
