grep '<wordLink ' |\
perl -e '#if ($]>=5.008){binmode(STDIN, ":encoding(utf-8)");};
         while (<>){if (/lexPair=\"([^\"]*)\"/){print "$1\n";}}' |\
sed 's/^ *//;s/ *$//;s/ *; */;/;' |\
tr ';' "\t" |\
sort |\
uniq -c |\
sort -rn 
