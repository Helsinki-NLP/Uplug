while (<>){
    s/toDoc=/xxxDoc=/g;
    s/fromDoc=/toDoc=/g;
    s/xxxDoc=/fromDoc=/g;
    s/(xtargets=\")(.*?)(\s*;\s*)(.*?)(\")/$1$4$3$2$5/;
    s/(lexPair=\")(.*?)(\s*;\s*)(.*?)(\")/$1$4$3$2$5/;
    s/(span=\")(.*?)(\s*;\s*)(.*?)(\")/$1$4$3$2$5/;
    print;
}
