if ($]>=5.008){binmode(STDIN, ":encoding(utf-8)");}

while (<>){
    if (/\<link\s.*id\=\"([^\"]+)\"/){
	$id=$1;
    }
    elsif (/\<wordLink\s.*lexPair\=\"([^\"]+)\"/){
	my ($src,$trg)=split(/\;/,$1);
	print join "\t",($id,$src,$trg),"\n";
    }
}

