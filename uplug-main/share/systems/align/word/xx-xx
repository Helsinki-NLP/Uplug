        '$UplugSystem/align/word/GIZA/giza-word-refined -c 1 -out giza-refined.links',
        '$UplugSystem/align/word/dynamicclues -in giza-refined.links',
        '$UplugSystem/align/word/GIZA/gizaclue-pos',
