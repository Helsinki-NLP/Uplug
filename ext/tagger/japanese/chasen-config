#!/bin/sh

prefix=/home/staff/joerg/user_local
exec_prefix=${prefix}
sysconfdir=${prefix}/etc
exec_prefix_set=no

usage()
{
    cat <<EOF
Usage: chasen-config [OPTIONS]

Options:
  [--prefix[=DIR]]
  [--exec-prefix[=DIR]]
  [--chasenrc-path]
  [--libs]
  [--cflags]
  [--dicdir]
  [--sharedir]
  [--mkchadic]  [--help]
  [--version]
EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

cflags=false
libs=false

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in
    --prefix=*)
	prefix=$optarg
        if test $exec_prefix_set = no ; then
          exec_prefix=$optarg
        fi
	;;

    --prefix)
	echo $prefix
	;;

    --exec-prefix=*)
	exec_prefix=$optarg
	exec_prefix_set=yes
	;;

    --exec-prefix)
	echo $exec_prefix
	;;

    --chasenrc-path)
	echo $sysconfdir/chasenrc
	;;

    --version)
	echo 2.2.9
	exit 0
	;;

    --help)
	usage 0
	;;

    --cflags)
        if test ${prefix}/include != /usr/include ; then
          includes=-I${prefix}/include
        fi
        echo $includes
       	;;

    --libs)
       	echo -L${exec_prefix}/lib -lchasen
       	;;

    --dicdir)
       	echo ${prefix}/share/chasen/dic
       	;;

    --sharedir)
       	echo ${prefix}/share/chasen/dic
       	;;

    --mkchadic)
       	echo ${exec_prefix}/libexec/chasen
       	;;

    *)
	usage
	exit 1
	;;
    esac
    shift
done

exit 0
